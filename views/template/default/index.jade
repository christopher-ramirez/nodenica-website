extend layout
block content

    div(class='col-md-12')
        div(class='panel panel-success')
            div(class='panel-heading') #{lingua.streaming.title}
            div(class='panel-body unspace')
                table(class='table table-hover table-striped')
                    tbody(id='streamingBody')
                        each item in streaming
                            tr
                                td !{item}

    div(class='col-md-12 home-box-middle-container')
        div(class='col-md-4')
            div(class='col-md-12 home-box-middle')
                h3 #{lingua.home.doc}
                a(href='https://play.google.com/store/apps/details?id=com.mc.nad', target='_blank')
                    img(src='/img/ic_android.png', class='tilt', width='72', height='72')
                p #{lingua.home.doc_text}
        div(class='col-md-4')
            div(class='col-md-12 home-box-middle')
                h3 #{lingua.home.download}
                a(href='http://nodejs.org/download/', target='_blank')
                    img(src='/img/baby-node.svg', class='tilt', width='72', height='72')
                p #{lingua.home.download_text}
        div(class='col-md-4')
            div(class='col-md-12 home-box-middle')
                h3 #{lingua.home.modules}
                a(href='https://www.npmjs.org/', target='_blank')
                    img(src='/img/ic_modules.png', class='tilt', height='72')
                p #{lingua.home.modules_text}

    div(class='col-md-4')
        div(class='panel panel-success')
            div(class='panel-heading')
                a(href='/blog',target='_self')
                    span(class='glyphicon glyphicon-file')
                    span #{lingua.header.main.pages.blog}
            div(class='panel-body unspace home-box')
                if( blog.length > 0 )
                    table(class='table table-hover table-striped',width='100%',cellspacing='0',cellpadding='10')
                        each item in blog
                            tr
                                td
                                    a(href='/blog/#{item.slug}',target='_self') #{item.title}
    div(class='col-md-4')
        div(class='panel panel-success')
            div(class='panel-heading')
                a(href='/questions',target='_self')
                    span(class='glyphicon glyphicon-question-sign')
                    span #{lingua.header.main.pages.questions}
            div(class='panel-body unspace home-box')
                if( questions.length > 0 )
                    table(class='table table-hover table-striped',width='100%',cellspacing='0',cellpadding='10')
                        each item in questions
                            tr
                                td
                                    a(href='/questions/#{item.slug}',target='_self') #{item.title}
    div(class='col-md-4')
        div(class='panel panel-success')
            div(class='panel-heading')
                a(href='/training',target='_self')
                    span(class='glyphicon glyphicon-file')
                    span #{lingua.header.main.pages.training}
            div(class='panel-body unspace home-box')
                if( training.length > 0 )
                    table(class='table table-hover table-striped',width='100%',cellspacing='0',cellpadding='10')
                        each item in training
                            tr
                                td
                                    a(href='/training/#{item.slug}',target='_self') #{item.title}